{
    "version": 2,
    "framework": null,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.2",
            "includeFiles": "**"
        }
    },
    "routes": [
        { "handle": "filesystem" },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
    "installCommand": "npm install"
}